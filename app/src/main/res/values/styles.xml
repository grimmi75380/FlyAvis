<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeCloseDrawable">@drawable/baseline_close_24</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog</item>
    </style>

    <style name="FirebaseTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <style name="Smaller_Drawable_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="Smaller_Drawable">
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

</resources>
